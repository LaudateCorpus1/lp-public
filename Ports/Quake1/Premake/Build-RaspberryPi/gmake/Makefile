# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=release
endif
export config

PROJECTS := quake-gles1 quake-gles2

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

quake-gles1: 
	@echo "==== Building quake-gles1 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f quake-gles1.make

quake-gles2: 
	@echo "==== Building quake-gles2 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f quake-gles2.make

clean:
	@${MAKE} --no-print-directory -C . -f quake-gles1.make clean
	@${MAKE} --no-print-directory -C . -f quake-gles2.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   release"
	@echo "   debug"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   quake-gles1"
	@echo "   quake-gles2"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
